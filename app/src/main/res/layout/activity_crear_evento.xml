<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/imgVista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/purple_background" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/txtnombreEvento"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_background"
                android:hint="Nombre evento"
                android:lines="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:gravity="center|start"
                android:padding="10dp"
                android:textColor="#7a7a7a"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_background"
                android:hint="Descripcion"
                android:lines="8"
                android:ems="10"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:padding="10dp"
                android:textColor="#7a7a7a"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/txtUbicacion"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_background"
                android:hint="Ubicacion"
                android:lines="2"
                android:ems="10"
                android:inputType="textMultiLine"
                android:gravity="center|start"
                android:padding="10dp"
                android:textColor="#7a7a7a"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtfecha"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_background"
                    android:ems="10"
                    android:drawableEnd="@drawable/calendario_18"
                    android:gravity="center|start"
                    android:hint="Fecha"
                    android:inputType="date"
                    android:lines="2"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:textColor="#7a7a7a"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/txthora"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_background"
                    android:ems="10"
                    android:gravity="center|start"
                    android:drawableEnd="@drawable/reloj_18"
                    android:layout_marginLeft="2dp"
                    android:hint="Hora"
                    android:inputType="datetime"
                    android:lines="2"
                    android:padding="10dp"
                    android:textColor="#7a7a7a"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtAforo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_background"
                    android:ems="10"
                    android:gravity="center|start"
                    android:hint="Aforo"
                    android:inputType="number"
                    android:lines="1"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:textColor="#7a7a7a"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/txtimagen"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_background"
                    android:ems="10"
                    android:gravity="center|start"
                    android:layout_marginLeft="2dp"
                    android:drawableEnd="@drawable/subirimagen"
                    android:hint="Subir Imagen"
                    android:onClick="onclick"
                    android:lines="2"
                    android:padding="10dp"
                    android:textColor="#7a7a7a"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroupEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonPublico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Publico"
                    android:textColorHint="#404040"
                    android:textColor="#7a7a7a"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>


                <RadioButton
                    android:id="@+id/radioButtonPrivado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privado"
                    android:checked="true"
                    android:textSize="18sp"
                    android:textColor="#7a7a7a"
                    android:textStyle="bold|italic"
                    android:textColorHint="#404040" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonRegister2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="Crear Evento"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F44336"
                    android:elevation="3dp"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E10202"
                    android:elevation="3dp"
                    android:text="Cancelar"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>